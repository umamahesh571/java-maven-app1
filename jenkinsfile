pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/umamahesh571/java-maven-app1.git'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    sh 'mvn clean package'
                }
            }
        }
        
        stage('Create and Push Docker Image') {
            steps {
                script {
                    sh '''
                    cat > Dockerfile <<EOF
                    FROM openjdk:latest
                    COPY target/*.jar /app.jar
                    CMD ["java", "-jar", "/app.jar"]
                    EOF
                    
                    docker build -t umamahesh571/java-maven-app1 .
                    docker login -u umamahesh571 -p Mahi66@66
                    docker push umamahesh571/java-maven-app1
                    '''
                }
            }
        }
        
        stage('Deploy Container from Docker Hub') {
            steps {
                script {
                    sh '''
                    docker stop java-maven-app1-container || true
                    docker rm java-maven-app1-container || true
                    docker pull umamahesh571/java-maven-app1
                    docker run -d -p 8081:8081 --name java-maven-app1-container umamahesh571/java-maven-app1
                    '''
                }
            }
        }
    }
}
